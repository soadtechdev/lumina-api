{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "./shared/templates",
        "watchAssets": true,
        "outDir": "./dist"
      },
      {
        "include": "modules/notifications/*.json",
        "watchAssets": true,
        "outDir": "./dist/src"
      }
    ],
    "watchAssets": true
  }
}
